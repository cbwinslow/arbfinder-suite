# ArbFinder Suite Environment Variables

# Database Configuration
DATABASE_PROVIDER=postgresql  # or mysql
DATABASE_URL=postgresql://user:password@localhost:5432/arbfinder
# Alternative MySQL: mysql://user:password@localhost:3306/arbfinder

# Legacy SQLite (for backward compatibility)
ARBF_DB=~/.arb_finder.sqlite3

# API Configuration
FRONTEND_ORIGIN=http://localhost:3000

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_...

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_ACCESS_KEY=your-r2-access-key
CLOUDFLARE_R2_SECRET_KEY=your-r2-secret-key
CLOUDFLARE_R2_BUCKET=arbfinder
CLOUDFLARE_API_TOKEN=your-api-token

# OpenAI API (for AI agents)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Crawler Configuration
CRAWLER_CONFIG_PATH=config/crawler.toml
CRAWLER_USER_AGENT=ArbFinder/1.0

# CrewAI Configuration
CREWAI_CONFIG_PATH=crew/crewai.yaml

# Worker Configuration
ENABLE_CRAWLER_WORKER=true
ENABLE_METADATA_WORKER=true
ENABLE_IMAGE_WORKER=true
CRAWLER_SCHEDULE="0 */4 * * *"  # Every 4 hours

# Feature Flags
ENABLE_CRAWL4AI=true
ENABLE_MINIO=true
ENABLE_CLOUDFLARE=true
ENABLE_PRISMA=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=arbfinder.log

# Development
DEBUG=false
RELOAD=true
